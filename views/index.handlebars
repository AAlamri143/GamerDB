{{!-- game list --}}
<div class="row" style="margin-top: 70px">
    <div class="col-sm-12">
        <h2>Games List</h2>

        <dir class="gameList">
            {{#each game}}
            <div class="gameCard">
                <div class="flip">
                    <div class="front">
                        <img src="#" alt="photo" />
                    </div>
                    <div class="back">
                        <h5>Game Name: {{this.Name}}</h5>
                        <p>Game Platform: {{this.Platform}}</p>
                        <p>Year_of_Release: {{this.Year_of_Release}}</p>
                        <p>Genre: {{this.Genre}} </p>
                    </div>
                </div>
            </div>
            {{/each}}
        </dir>
    </div>
</div>

