<script>
    $(document).ready(function () {

        $(".gameCard").({
            axis: 'y',
            trigger: 'hover',
        });

        $("#searchBtn").on("click", function () {
            var input = $('#inputGame').val().trim();
            var inputName = { name: input };
            console.log("button clicked");

            $.post("/input", inputName)
                .then(function (data) {
                    $(".gameList").prepend(
                        '<div class="gameCard">' +
                        '<div class="flip">' +
                        '<div class="front">' +
                        '<img src="#" alt="photo" />' +
                        '</div>' +
                        '<div class="back">' +
                        '<h3>Game Name: ' + data.Name + '</h3>' +
                        '<p>Game Platform: ' + data.Platform + '</p>' +
                        '<p>Year_of_Release: ' + data.Year_of_Release + '</p>' +
                        '<p>Genre: ' + data.Genre + '</p>' +
                        '</div>' +
                        '</div>' +
                        '</div>');
                    $('#inputGame').val("");
                    console.log("input post");
                });
        })

    })
</script>